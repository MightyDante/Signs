<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cb6232"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:padding="10dp"
                android:text="Complete los datos para \n Enviar su Informe de Servicio"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="19dp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:focusableInTouchMode="true"
                android:padding="15dp"
                app:srcCompat="@mipmap/nombre" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Grupo de PredicaciÃ³n"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/grupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:background="#FFEDEDED"
                android:elevation="3dp"
                android:gravity="center"
                android:hint="Seleccionar"
                android:onClick="grupo"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="#00325B"
                android:textColorHint="#00325B"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#333333"
                android:padding="15dp"
                app:srcCompat="@mipmap/nombre" />

            <EditText
                android:id="@+id/Nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:maxLength="25"
                android:padding="10dp"
                android:textAlignment="center" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textAlignment="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="146dp"
                        android:layout_weight="1"
                        android:background="#00325B"
                        android:focusableInTouchMode="true"
                        android:padding="25dp"
                        app:srcCompat="@mipmap/date" />

                    <ImageButton
                        android:id="@+id/predicacion"
                        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="146dp"
                        android:layout_weight="1"
                        android:background="#cb6232"
                        android:elevation="0dp"
                        android:paddingTop="10dp"
                        app:srcCompat="@mipmap/horas" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/Mes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="#FFECECEC"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:hint="Seleccionar Mes"
                        android:onClick="mes"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="#cb6232"
                        android:textColorHint="#cb6232"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/Horas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:hint="Horas"
                        android:inputType="time"
                        android:maxLength="3"
                        android:padding="15dp"
                        android:textAlignment="center" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/mapa"
                        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="146dp"
                        android:layout_weight="1"
                        android:background="#cb6232"
                        android:elevation="0dp"
                        app:srcCompat="@mipmap/publicaciones_1" />

                    <ImageButton
                        android:id="@+id/predicacion"
                        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="146dp"
                        android:layout_weight="1"
                        android:background="#00325B"
                        android:elevation="0dp"
                        android:paddingLeft="20dp"
                        app:srcCompat="@mipmap/videos_1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/Publicaciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Publicaciones"
                        android:inputType="number"
                        android:maxLength="3"
                        android:padding="15dp"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/Videos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Videos"
                        android:inputType="number"
                        android:maxLength="3"
                        android:padding="15dp"
                        android:textAlignment="center" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/mapa"
                        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="146dp"
                        android:layout_weight="1"
                        android:background="#00325B"
                        android:elevation="0dp"
                        android:paddingTop="10dp"
                        app:srcCompat="@mipmap/revisita" />

                    <ImageButton
                        android:id="@+id/predicacion"
                        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="146dp"
                        android:layout_weight="1"
                        android:background="#cb6232"
                        android:elevation="0dp"
                        android:paddingTop="10dp"
                        app:srcCompat="@mipmap/cursos" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/Revisitas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Revisitas"
                        android:inputType="number"
                        android:maxLength="3"
                        android:padding="15dp"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/Estudios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:ems="10"
                        android:hint="Estudios"
                        android:inputType="number"
                        android:maxLength="2"
                        android:padding="15dp"
                        android:textAlignment="center" />

                </TableRow>

            </TableLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/enviarform"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#cb6232"
                android:elevation="15dp"
                android:focusableInTouchMode="false"
                android:onClick="enviarinforme"
                android:text="Enviar Informe"
                android:textColor="#ffffff"
                android:textSize="17sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>